<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7e7d7d"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_dialog_login_admin_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/inputbackground"
        android:ems="10"
        android:gravity="center"
        android:hint="(Mall Name)for testing: inorbit" >
		
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_dialog_login_admin_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/inputbackground"
        android:ems="10"
        android:gravity="center"
        android:hint="Password (for testing:blank)"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <Button
            android:id="@+id/bt_dialog_login_admin_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:text="Request New Account" />

        <Button
            android:id="@+id/bt_dialog_login_admin_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:text="Login" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
